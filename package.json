{
  "private": true,
  "scripts": {
    "clean": "rm -rf public hint-report node_modules",
    "markdownlint:check": "markdownlint-cli2 '**/*.md' !hugo !openring !node_modules",
    "prettier:check": "prettier --config .prettierrc.yml --check '**/*.{md,css,json}' !.vscode !hugo !openring !assets/css/syntax-*.css",
    "prettier:format": "prettier --config .prettierrc.yml --write '**/*.{md,css,json}' !.vscode !hugo !openring !assets/css/syntax-*.css"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.9.2",
    "prettier": "^3.0.0"
  }
}
